<?xml version="1.0"?>

<launch>
    <arg name="ir_frame" default="true"/>
    
    <node if="$(arg ir_frame)" required="true" name="ir_corrector" 
        pkg="ir_correction" type="ir_corrector.py" output="screen"/>

    <node name="ws_gen" pkg="ws_generator" type="gui_generator.py" output="screen"/>

    <node name="ufm_control" pkg="haptic_generator" type="haptic_control.py" output="screen">
        <param name="name" value="ufm"/>
        <param name="spi_address" value="0" type="int"/>
        <param name="i2c_address" value="0x2c"/>
        <param name="scale" value="0.6"/>
    </node>

</launch>

